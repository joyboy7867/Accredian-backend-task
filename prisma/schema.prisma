generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model Referrer {
  id                 Int      @id @default(autoincrement())
  name               String
  email              String   @unique
  phoneNumber        String
  relationshipToReferee String
  additionalComments String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  referees           Referee[]
}

model Referee {
  id                 Int      @id @default(autoincrement())
  name               String
  email              String   @unique
  phoneNumber        String
  referralCode       String?
  messageFromReferrer String?
  referrerId         Int
  referrer           Referrer @relation(fields: [referrerId], references: [id])
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}